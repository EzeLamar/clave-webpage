{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "sku": {
      "type": "uid",
      "targetField": "name"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "discount": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0,
      "max": 100
    },
    "stock": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "description": {
      "type": "text",
      "required": true
    },
    "features": {
      "type": "component",
      "component": "shared.item",
      "repeatable": true
    },
    "categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "product"
    }
  }
}
